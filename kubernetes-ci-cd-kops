pipeline{
  agent any
  tools {
    maven 'maven3'
  }
  stages{
    stage('Maven Build'){
      steps{
        sh "mvn clean package"
      }
    }
    stage('Build Docker Image'){
      steps{
        sh "sudo docker build . -t madhudocker3110/pets-app:${dockerTag()}"
      }
    }
    
    stage('Docker Push'){
      steps{
         script {
                withCredentials([usernamePassword(credentialsId: '39fe48d5-8d56-40aa-9358-da0319231dc5', passwordVariable: 'password', usernameVariable: 'user')]) {
                 sh "docker login -u madhudocker3110 -p ${password}"
                   }
               sh "sudo docker push madhudocker3110/pets-app:${dockerTag()}" 
               }
         }
    }
  }
}

def dockerTag(){
    def commitId = sh returnStdout: true, script: 'git rev-parse --short HEAD'
	  return commitId
}
