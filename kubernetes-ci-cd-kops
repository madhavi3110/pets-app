pipeline{
  agent any
  tools {
    maven 'maven3'
  }
  stages{
    stage('Maven Build'){
      steps{
        sh "mvn clean package"
      }
    }
    stage('Build Docker Image'){
      steps{
        sh "sudo docker build . -t madhudocker3110/pets-app:${dockerTag()}"
      }
    }
    
    stage('Docker Push'){
      steps{
         script {
               withDockerServer([uri: 'unix:///var/run/docker.sock']) {
               withDockerRegistry([credentialsId: 'docker', url: "https://hub.docker.com"]) { 
               sh "sudo docker push madhudocker3110/pets-app:${dockerTag()}"   
               }  
              }
         }
         }
    }
  }
}

def dockerTag(){
    def commitId = sh returnStdout: true, script: 'git rev-parse --short HEAD'
	  return commitId
}
